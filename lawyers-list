# Shared header and footer
def header(title):
    return f"""<!doctype html>
<html lang="en">
<head>
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<title>{title}</title>
<meta name="description" content="Experienced lawyers in Dubai providing litigation and advisory services to individuals and businesses.">
<link rel="stylesheet" href="/assets/css/styles.css">
</head>
<body>
  <div class="container">
    <nav class="nav">
      <a class="brand" href="/index.html">Lawyers in Dubai</a>
      <a href="/about.html">About</a>
      <a href="/services.html">Services</a>
      <a href="/lawyers.html">Lawyers</a>
      <a href="/blog.html">Blog</a>
      <a class="btn" href="/contact.html">Contact</a>
    </nav>
"""
def footer():
    return """
    <div class="footer">
      <p>© <span id="year"></span> Lawyers in Dubai. All rights reserved.</p>
    </div>
  </div>
  <script src="/assets/js/main.js"></script>
</body>
</html>
"""

